<h1>List of photos</h1>

<form>
  <label for="imageurl">Image</label>
  <input type="text" id="imageurl" name="image_url" placeholder="Enter a URL for the image" required>

  <label for="caption">Caption</label>
  <textarea id="caption" name="caption" placeholder="Enter a caption for the image..." required></textarea>

  <label for="ownerid">Owner ID</label>
  <input type="text" id="ownerid" name="owner_id" placeholder="Enter and ID of a User" required>

  <button type=submit">Add Photo</submit>

</form>

<hr>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Caption</th>
    <th>Owner</th>
    <th>Posted</th>
    <th></th>
  </tr>
<% Photo.all.each do |photo| %>  
  <tr>
    <td><img src="<%= photo.image %>" height="300px"></td>
    <td><%= photo.caption %></td>
    <td><%= photo.owner_id %></td>
    <td><%= photo.created_at %></td>
    <td><a href="/photos/<%= photo.id %>">Show Details</a></td>
  </tr>
  <% end %>

</table>
