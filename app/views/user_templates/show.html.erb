<h1><%= @the_user.username %></h1>

<div>ID</div>
<div>
<%= @the_user.id%>
</div>

<div>Edit user</div>
<form action="/user_update/<%= @the_user %>" method="post">
  <label for="edituser">Username</label>
  <input type="text" id="edituser" name="username" value="<%= @the_user.username %>">
  <button type="submit">Update user</button>
</form>

<% owned_photos = Photo.where({ :owner_id => @the_user.id }) %>
<h2>Own photos(<%= owned_photos.count %>)</h2>


<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

<% owned_photos.each do |photo| %> 

<tr>
  <td>
    <img src="<%= photo.image %>">
  </td>
  <td><%= photo.poster.username %></td>
  <td><%= photo.caption %></td>
  <td><%= photo.created_at %></td>
  <td><a href="/photos/<% photo.id %>">Show Details</a></td>
</tr>
<% end %>
</table>
